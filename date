    <script>
        // --- 1. TAB SWITCHING LOGIC ---
        const menuItems = document.querySelectorAll('.menu-item');
        const sections = document.querySelectorAll('.content-section');

        menuItems.forEach(item => {
            item.addEventListener('click', () => {
                menuItems.forEach(i => i.classList.remove('active'));
                item.classList.add('active');
                
                sections.forEach(s => s.classList.remove('active'));
                const targetId = item.getAttribute('data-target');
                document.getElementById(targetId).classList.add('active');
            });
        });

        // --- 2. YEAR PROGRESS LOGIC ---
        function initCalendar() {
            const grid = document.getElementById('grid');
            const yearDisplay = document.getElementById('yearDisplay');
            const daysLeftDisplay = document.getElementById('daysLeftDisplay');

            const now = new Date();
            const currentYear = now.getFullYear();
            yearDisplay.innerText = `Current Cycle: ${currentYear}`;

            const isLeap = (currentYear % 4 === 0 && currentYear % 100 !== 0) || (currentYear % 400 === 0);
            const totalDays = isLeap ? 366 : 365;
            const startOfYear = new Date(currentYear, 0, 1);
            const diff = now - startOfYear;
            const oneDay = 1000 * 60 * 60 * 24;
            const dayOfYear = Math.floor(diff / oneDay) + 1;

            daysLeftDisplay.innerText = `${totalDays - dayOfYear} days remaining`;
            grid.innerHTML = ''; 

            const monthNames = ["Jan", "Feb", "Mar", "Apr", "Mei", "Jun", "Jul", "Ags", "Sep", "Okt", "Nov", "Des"];

            for (let i = 1; i <= totalDays; i++) {
                const dot = document.createElement('div');
                dot.classList.add('dot');
                const dateForDot = new Date(currentYear, 0, i);
                const dayDate = dateForDot.getDate();
                const monthName = monthNames[dateForDot.getMonth()];
                
                dot.setAttribute('data-date', `${dayDate} ${monthName}`);

                if (i < dayOfYear) {
                    dot.classList.add('passed');
                } else if (i === dayOfYear) {
                    dot.classList.add('current');
                    dot.setAttribute('data-date', `TODAY: ${dayDate} ${monthName}`);
                }
                grid.appendChild(dot);
            }
        }

        // --- 3. COUNTDOWN LOGIC (Fitur Baru) ---
        function calculateCountdown() {
            const nameInput = document.getElementById('eventName').value;
            const dateInput = document.getElementById('eventDate').value;
            const resultBox = document.getElementById('countdownResult');
            const resultName = document.getElementById('resultName');
            const resultDays = document.getElementById('resultDays');

            if (!dateInput) {
                alert("Please select a date first.");
                return;
            }

            const targetDate = new Date(dateInput);
            const today = new Date();
            
            // Set waktu ke 00:00 agar hitungan hari akurat
            targetDate.setHours(0,0,0,0);
            today.setHours(0,0,0,0);

            const diffTime = targetDate - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

            resultName.innerText = nameInput ? nameInput.toUpperCase() : "EVENT";
            
            if (diffDays < 0) {
                resultDays.innerText = Math.abs(diffDays);
                document.querySelector('.countdown-label:last-child').innerText = "DAYS AGO";
            } else if (diffDays === 0) {
                resultDays.innerText = "TODAY";
                document.querySelector('.countdown-label:last-child').innerText = "IS THE DAY";
            } else {
                resultDays.innerText = diffDays;
                document.querySelector('.countdown-label:last-child').innerText = "DAYS LEFT";
            }

            resultBox.style.display = "block";
        }

        // --- 4. SETTINGS LOGIC ---
        function changeAccent(color, btn) {
            document.documentElement.style.setProperty('--accent-color', color);
            document.querySelectorAll('.color-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        }

        function setTheme(theme, btn) {
            document.querySelectorAll('.theme-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            if (theme === 'soft') {
                document.body.classList.add('soft-theme');
            } else {
                document.body.classList.remove('soft-theme');
            }
        }

        // Jalankan saat load
        initCalendar();
    </script>
</body>
</html>
