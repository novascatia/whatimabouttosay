                    <div class="calendar-grid" id="grid"></div>
                </div>
                
                <div class="stats-bar">
                    <div id="yearDisplay">Checking date...</div>
                    <div style="color: var(--accent-color); font-weight:bold;" id="daysLeftDisplay">...</div>
                </div>
            </div>

            <div id="countdown" class="content-section">
                <div class="section-header">event tracker</div>
                <div class="countdown-card">
                    <div class="input-group">
                        <label class="input-label">EVENT NAME</label>
                        <input type="text" id="eventName" placeholder="e.g. Graduation, Holiday, Launch">
                    </div>
                    <div class="input-group">
                        <label class="input-label">TARGET DATE</label>
                        <input type="date" id="eventDate">
                    </div>
                    <button class="btn-primary" onclick="calculateCountdown()">START TRACKING</button>

                    <div id="countdownResult" class="countdown-result">
                        <span class="countdown-label">TIME REMAINING FOR <b id="resultName" style="color:#fff">EVENT</b></span>
                        <span class="countdown-number" id="resultDays">0</span>
                        <span class="countdown-label">DAYS LEFT</span>
                    </div>
                </div>
            </div>

            <div id="appearance" class="content-section">
                <div class="section-header">customization</div>
                <div class="settings-grid">
                    
                    <div class="setting-card">
                        <label class="input-label">BACKGROUND THEME</label>
                        <div class="theme-options">
                            <button class="theme-btn active" onclick="setTheme('oled', this)">OLED BLACK</button>
                            <button class="theme-btn" onclick="setTheme('soft', this)">SOFT DARK</button>
                        </div>
                    </div>

                    <div class="setting-card">
                        <label class="input-label">SYSTEM ACCENT COLOR</label>
                        <div class="color-options">
                            <div class="color-btn active" style="background: #ff4d4d;" onclick="changeAccent('#ff4d4d', this)"></div>
                            <div class="color-btn" style="background: #00e5ff;" onclick="changeAccent('#00e5ff', this)"></div>
                            <div class="color-btn" style="background: #00ff88;" onclick="changeAccent('#00ff88', this)"></div>
                            <div class="color-btn" style="background: #b388ff;" onclick="changeAccent('#b388ff', this)"></div>
                        </div>
                    </div>

                </div>
